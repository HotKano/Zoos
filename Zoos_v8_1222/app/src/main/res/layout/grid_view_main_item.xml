<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 이미지 및 저장 버튼-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/image_topCare"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder" />

        <ImageView
            android:id="@+id/like_img_topCare"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/icon_like_before" />


    </RelativeLayout>

    <!-- 닉네임 및 타이틀 텍스트-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nickname_topCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="6sp"
            android:text="가오나시의"
            android:textColor="#3583fb"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_topCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="6sp"
            android:text="이런 저런 이런 저런 이빨-치석은 안녕한가요?"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 해시 태그-->
    <TextView
        android:id="@+id/tag_topCare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="5sp"
        android:text="#양치질 #치석 #3개월"
        android:textColor="#3583fb"
        android:textSize="11sp"
        android:textStyle="bold" />

</LinearLayout>