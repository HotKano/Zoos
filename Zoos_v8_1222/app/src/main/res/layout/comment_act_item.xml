<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal">


    <RelativeLayout
        android:id="@+id/textzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <!-- 본문 내용 -->
        <TextView
            android:id="@+id/comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="18dp"
            android:text="sdfaasdfasdfasdfasdfasdfasdfasdf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_reply"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_reply"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/nickName_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="이름입니다." />

            <TextView
                android:id="@+id/date_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/nickName_reply"
                android:text="2017-06-26" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>


